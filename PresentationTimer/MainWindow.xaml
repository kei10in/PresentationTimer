<Window x:Class="PresentationTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Margin="12,12,12,41" Name="grid1">
            <TextBlock Text="{Binding Path=TimeRemaining}" Name="curerntTime" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
        <Button Content="Start" Height="23" Margin="0,0,93,12" Name="buttonStart"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"
                Command="{Binding Path=StartCommand}" />
        <Button Content="Stop" Margin="0,0,12,12" Name="buttonStop" Height="23"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"
                Command="{Binding Path=StopCommand}"/>
    </Grid>
</Window>
